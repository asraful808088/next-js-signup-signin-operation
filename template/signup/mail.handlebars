    <div class="main" style="background-image: url('cid:logo1')">
      <div class="mainContainer"></div>
      <div
        class="hashCode mainContainer"
        style="margin: auto; margin-top:100px"
      >
        <div>
          <h1 class="hashCode codeHeader" style="margin: auto">Hash - Code</h1>
        </div>
        <div>
          <h3 class="hashCode code" style="margin: auto">{{hash_code}}</h3>
        </div>

      </div>

    </div>
  </body>
</html>