      @media only screen and (max-width: 400px) { .main { position: relative;
      background-image: url("./../../assets/background/subbg.png");
      background-position: center; background-repeat: no-repeat;
      background-size: cover; margin: auto; height: 200px; width: 400px; } }

    </style>
  </head>
